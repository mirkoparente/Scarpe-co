@model Scarpe_co.Models.Utenti

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <section class="pb-4">
                <section class="w-100 px-4">
                    <div class="row d-flex justify-content-center">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-6">
                            <div class="card shadow-2-strong my-5" style="border-radius: 1rem;">
                                <div class="card-body p-5 text-center">

                                    <h3 class="mb-5">Login</h3>

                                    <div class="form-outline mb-3">
                                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label" })
                                        
                                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                       
                                    </div>


                                    <div class="form-outline mb-4">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                                       
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        
                                    </div>

                                  

                                    <button class="btn btn-primary btn-lg text-bg-dark" type="submit">Login</button>

                                    <hr class="my-4">

                                    <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit"><i class="bi bi-google me-2"></i> Sign in with google</button>
                                    <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="bi bi-facebook me-2"></i>Sign in with facebook</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
        </section>
      
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
